<h1><a href="{{config.path.baseurl}}">{{config.project.name}}</a></h1>
<nav class="links">
    <ul>
        {{#each pages}}{{! loop through all pages that exists in `pages/` folder}}
            {{#isnt basename "index"}}
            <li><a href="{{config.path.baseurl}}/{{basename}}.html">{{basename}}</a></li>
            {{/isnt}}
        {{/each}}
    </ul>
</nav>
<nav class="main">
    <ul>
        <li class="search">
            <a class="fa-search" href="#search">Search</a>
            <form id="search" class="search" method="get" action="#">
                <input type="text" name="query" placeholder="Search" />
            </form>
        </li>
        <li class="menu">
            <a class="fa-bars" href="#menu">Menu</a>
        </li>
    </ul>
</nav>